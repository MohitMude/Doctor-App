<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:indeterminate="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:indeterminateTint="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/progress_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/loading"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/patient_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_person"
        android:layout_marginTop="40dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:padding="4dp"
        android:elevation="6dp"
        android:background="@drawable/background_rectangle"
       />

    <ImageButton
        android:id="@+id/btn_edit_image_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/patient_profile_image"
        android:src="@drawable/ic_edit"
        android:background="@drawable/background_circle"
        android:layout_marginTop="40dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:padding="4dp"
        android:elevation="6dp"
        />

    <ImageButton
        android:id="@+id/btn_upload_image_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/patient_profile_image"
        android:layout_below="@id/btn_edit_image_patient"
        android:src="@drawable/ic_file_upload"
        android:background="@drawable/background_circle"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:visibility="gone"
        android:elevation="6dp"
       />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_below="@id/patient_profile_image"
         android:layout_margin="8dp"
         android:padding="4dp"
         >

         <TextView
             android:id="@+id/txt_patient_profile_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:textSize="28sp"
             android:text="Name:"
             android:gravity="center_horizontal"
             android:layout_margin="4dp"
             android:layout_marginTop="50dp"
             android:padding="4dp"
             android:textColor="@color/colorPrimary"
             />

         <TextView
             android:id="@+id/txt_patient_profile_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="Email: "
             android:gravity="center_horizontal"
             android:layout_margin="4dp"
             android:padding="4dp"
             />

         <TextView
             android:id="@+id/txt_patient_profile_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="Ph: "
             android:gravity="center_horizontal"
             android:layout_margin="4dp"
             android:padding="4dp"
             />

         <TextView
             android:id="@+id/txt_patient_profile_gender"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="Gender: "
             android:gravity="center_horizontal"
             android:layout_margin="4dp"
             android:padding="4dp"
             />

         <TextView
             android:id="@+id/txt_patient_profile_id"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="Id: "
             android:gravity="center_horizontal"
             android:layout_margin="4dp"
             android:padding="4dp"
             />

     </LinearLayout>

    </RelativeLayout>

</LinearLayout>